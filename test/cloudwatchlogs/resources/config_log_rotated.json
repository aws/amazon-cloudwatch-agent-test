{
  "agent": {
    "run_as_user": "root",
    "debug": true,
    "aws_sdk_log_level": "LogDebugWithHTTPBody"
  },
  "logs": {
    "logs_collected": {
      "files": {
        "collect_list": [
          {
            "file_path": "/tmp/rotate_me.log*",
            "log_group_name": "{instance_id}",
            "log_stream_name": "{instance_id}Rotated",
            "timezone": "UTC",
            "retention_in_days": 7
          }
        ]
      }
    }
  }
}