{
  "agent": {
    "debug": true
  },
  "metrics": {
    "namespace": "CloudWatchAgentPerformance",
    "append_dimensions": {
      "InstanceId": "${aws:InstanceId}"
    },
    "metrics_collected": {
      "Processor": {
        "measurement": [
          "% Processor Time",
          "Interrupts /sec",
          "% Interrupt Time",
          "% User Time",
          "%Privilege Time",
          "%DPC Time"
        ],
        "resources": [
          "*"
        ],
        "metrics_collection_interval": 1
      },
      "LogicalDisk": {
        "measurement": [
          "% Free Space",
          "Avg. Disk Bytes/Transfer",
          "Avg. Disk sec/Transfer",
          "Avg. Disk Queue Length",
          "Current Disk Queue Length",
          "Disk Bytes/sec",
          "Disk Transfers/sec",
          "Free Megabytes",
          "Split IO/sec",
          "Disk Time",
          "% Disk Write Time",
          "% Disk Read Time",
          "% Idle Time"
        ],
        "resources": [
          "*"
        ],
        "metrics_collection_interval": 1
      },
      "PhysicalDisk": {
        "measurement": [
          "Avg. Disk Bytes/Transfer",
          "Avg. Disk sec/Transfer",
          "Avg. Disk Queue Length",
          "Current Disk Queue Length",
          "Disk Bytes/sec",
          "Disk Transfers/sec",
          "Split IO/sec",
          "Disk Time",
          "% Disk Write Time",
          "% Disk Read Time",
          "% Idle Time"
        ],
        "resources": [
          "*"
        ],
        "metrics_collection_interval": 1
      },
      "Network Interface": {
        "measurement": [
          {
            "name": "Bytes Sent/sec",
            "rename": "Bytes_Sent_Per_Sec"
          },
          {
            "name": "Packets Sent/sec",
            "rename": "Packets_Sent_Per_Sec"
          },
          "Bytes Received/sec",
          "Packets Received/sec"
        ],
        "resources": [
          "*"
        ],
        "metrics_collection_interval": 1
      },
      "Memory": {
        "measurement": [
          "Available Memory",
          "Nonpageable memory pool bytes",
          "Pageable memory pool bytes",
          "Committed Bytes",
          "Cache Faults/sec",
          "Page Faults/sec",
          "Pages Input/sec",
          "Pages Output/sec",
          "Page Reads/sec",
          "Page Writes/sec",
          "Pages/sec",
          {
            "name": "Available Bytes",
            "rename": "Available_Bytes"
          }
        ],
        "metrics_collection_interval": 1
      },
      "System": {
        "measurement": [
          "Context Switches/sec",
          "System Calls/sec",
          "Processor Queue Length",
          "% Total Processor Time",
          "% Total User Time",
          "% Total Interrupt Time"
        ],
        "metrics_collection_interval": 1
      },
      "TCPv4": {
        "measurement": [
          "Connections Established",
          "Connections Reset",
          "Connection Failures",
          "Segments Retransmitted/sec",
          "Segments/sec",
          "Segments Received/sec",
          "Segments Sent/sec"
        ],
        "metrics_collection_interval": 1
      },
      "TCPv6": {
        "measurement": [
          "Connections Established",
          "Connections Reset",
          "Connection Failures",
          "Segments Retransmitted/sec",
          "Segments/sec",
          "Segments Received/sec",
          "Segments Sent/sec"
        ],
        "metrics_collection_interval": 1
      },
      "procstat": [
        {
          "exe": "amazon-cloudwatch-agent.exe",
          "measurement": [
            "cpu_usage",
            "memory_rss",
            "memory_vms",
            "write_bytes"
          ],
          "metrics_collection_interval": 1
        }
      ]
    },
    "append_dimensions": {
      "InstanceId": "${aws:InstanceId}"
    },
    "force_flush_interval": 30
  }
}