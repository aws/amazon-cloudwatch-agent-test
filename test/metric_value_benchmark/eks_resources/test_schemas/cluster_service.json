{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "structured log schema",
  "description": "json schema for the cloudwatch agent k8s structured log",
  "type": "object",

  "properties": {
    "ClusterName": {},
    "Type": {},
    "Sources": {},
    "Timestamp": {},
    "Version": {},
    "Service": {},
    "Namespace":{},
    "NodeName": {},
    "kubernetes":{
      "type": "object",
      "properties": {
        "service_name": {},
        "namespace_name": {}
      },
      "required": ["service_name"],
      "additionalProperties": false
    },
    "service_number_of_running_pods":{},
    "CloudWatchMetrics": {}
  },
  "required": [
    "ClusterName",
    "Type",
    "Sources",
    "Timestamp",
    "Version",
    "Service",
    "kubernetes",
    "CloudWatchMetrics"
  ],
  "additionalProperties": false
}